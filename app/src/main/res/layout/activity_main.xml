<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dvenez un nombre alÃ©atoire entre 0-100"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.709" android:layout_marginTop="132dp" android:id="@+id/textView"/>
    <EditText
            android:layout_width="263dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/guessEditText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="132dp"
            android:hint="Saisissez votre devinette" app:layout_constraintBottom_toTopOf="@+id/guessButton"
            app:layout_constraintHorizontal_bias="0.439" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Devinez"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guessButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="236dp"
            android:onClick="checkGuess"/>

</androidx.constraintlayout.widget.ConstraintLayout>